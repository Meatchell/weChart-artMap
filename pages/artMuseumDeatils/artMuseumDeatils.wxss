.head-img  {
    width: 100%;
    /*height: 440rpx;*/
    position: relative;
    /*height:auto;*/
}
.head-img image {
    width: 100%;
    display: block;
    /*height: 100%;*/
}
.head-img .museum-name {
    position: absolute;
    width: calc(100% - 40rpx);
    height: 65rpx;
    background-color: rgba(200,200,200,0.5);
    bottom:0;
    overflow: hidden;
    padding:15rpx 20rpx;
    line-height: 1;
}
.museum-name text {
    width: 100%;
}
.museum-name .museum-name-cn {
    display: block;
    font-size: 16px;
}
.museum-name .museum-name-en {
    font-size: 12px;
    color: #999;
    line-height:1;
}
.line {
