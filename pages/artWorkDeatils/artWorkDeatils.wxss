.container {
    width: 100%;
    height: 100vh;
}
.phone {
    position: absolute;
    width: 62rpx;
    height: 62rpx;
    top:34rpx;
    right: 28rpx;
    background-image: url("https://artmap-img.oss-cn-shenzhen.aliyuncs.com/phone.png");
    background-size: cover;
    z-index: 3;
}
.container .img {
    width: 100%;
    height: calc(100% - 250rpx);
    position: relative;
}
.container .img image {
    width: 100%;
    height: 100%;
}
.container .img .art-name {
    position: absolute;
    bottom:0;
    width:100%;
    height:140rpx;
    background-color: rgba(39,27,29, 0.7);
    color:#fff;
    padding:30rpx 20rpx;
    box-sizing: border-box;
    line-height:40rpx;
}
.art-name .key-name {
    display: block;
    font-size: 34rpx;
}
.art-name .key-word  {
    font-size: 26rpx;
    margin-top: -10rpx;
}
.container .info {
    width: 100%;
    height: 250rpx;
    display: flex;
}
.info .warp {
    width: 65%;
    height: 100%;
    background-color: #d6d6d6;
    display: flex;
}
.introduction {
    width: 50%;
    height: 100%;
    position: relative;
    /*padding-right: 3rpx;*/
    box-sizing: border-box;
    padding:40rpx 5rpx 30rpx 25rpx;

}
.author {
    width: 50%;
    height: 100%;
    box-sizing: border-box;
    padding:40rpx 5rpx 30rpx 25rpx;

}
.introduction-tit {
    color: #929292;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.introduction-content {
    color: #434343;
    font-size: 30rpx;
}
.introduction .line {
    width: 3rpx;
    height: 184rpx;
    position: absolute;
    right: 0;
    top:33rpx;
}
