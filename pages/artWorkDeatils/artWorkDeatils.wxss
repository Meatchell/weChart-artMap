.author-tit {
    color: #929292;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.author-content {
    color: #434343;
    font-size: 30rpx;
}
.line image {
    width: 100%;
    height: 100%;
}
.info .contact {
    width: 35%;
    height: 100%;
    /*position: relative;*/
    /*display: flex;*/
}
.contact .price {
    position: relative;
    /*top:50%;*/
    /*transform: ;*/
    width: 100%;
    height: 153rpx;
    background-color: #000;
    color: #fff;
}
.price .warp2 {
    position: absolute;
    height: auto;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    color: #fff;
    background-color: transparent;
}
.price view {
    display: block;
    text-align: center;
}
.price .post {
    font-size: 12px;
}

.contact .buy {
    width: 100%;
    height: 97rpx;
    color: #000;
    text-align: center;
    line-height: 97rpx;
}

/*弹窗部分*/
.modal {
    position: absolute;
    top:0;
    left:0;
    bottom: 0;
    right: 0;
    background-color: rgba(75,75,75, 0.82);
}
.modal-content {
    width: 612rpx;
    /*height: 60%;*/
    position: fixed;
    top:65rpx;
    left: 50%;
    margin-left: -306rpx;


}
.modal-bg {
    width: 100%;
    position: relative;
    z-index: 2;
    /*background-color: ;*/
}
.modal-bg image {
    width:100%;
    height: 352rpx;
}
.modal-hidden image {
    width: 56rpx;
    height:56rpx;
}
.modal-text {
    text-indent: 2em;
    height: 560rpx;
    background-color: #fff;
    border-radius: 20rpx;
    position: relative;
    z-index: 1;
    top:-75rpx;
    padding:70rpx 40rpx 40rpx 40rpx;
    box-sizing: border-box;
    font-size: 30rpx;
}
.modal-hidden {
    position: absolute;
    left:50%;
    bottom:-32rpx;
    margin-left: -28rpx;
}

