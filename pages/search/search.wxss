.search-bg  {
    background-color: #CAC9CF;
    width: calc(100% - 30rpx);
    padding:15rpx;
    height: 56rpx;
    border-top:1px solid #B5B5B5;
    border-bottom:1px solid #B5B5B5;
    position: fixed;
    top:0;
}
.search-bg input {
    width: calc(100% - 100rpx);
    background-color: #fff;
    border-radius: 8rpx;
    height: 56rpx;
    padding-left: 45rpx;
    box-sizing: border-box;
    padding-right:22px;
    display: inline-block;
    vertical-align: middle;
    /*font-size: 14rpx;*/
}
.search-bg image {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    top:25rpx;
    z-index: 3;
}
.search {
    left:25rpx;
}
.remove {
    right: 125rpx;
}
.search-bg text {
    font-size: 16px;
    display: inline-block;
    line-height: 46rpx;
    margin-left: 20rpx;
    color: #7D7C81;
}
